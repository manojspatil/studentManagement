<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="studentManagement.Views.AddSubjectPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="_subject" Text="{Binding UserId}" Placeholder="Enter Subject Name" HorizontalOptions="FillAndExpand"/>

            <Button x:Name="_saveButton" Text="Login" HorizontalOptions="FillAndExpand" Clicked="SaveButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>